@inject IJSRuntime js

<div class="cover-frame">
    <div class="myname">Ryan Andersen</div>
    <canvas id="cover-canvas"></canvas>
</div>

<style>
    .myname {
        font-family: 'Roboto Mono', monospace;
        font-size: 8em;
    }

    .cover-frame {
        width: 100%;
        height: 100vh; 
        background-color: rgb(20, 20, 36);
        z-index: 100;
        top: 0px;
        position: absolute;
        overflow-x: hidden;
    }
</style>

@code
{
    protected override Task OnAfterRenderAsync(bool firstRender)
    {
        js.InvokeVoidAsync("startAnimation");
        return base.OnAfterRenderAsync(firstRender);
    }
}
